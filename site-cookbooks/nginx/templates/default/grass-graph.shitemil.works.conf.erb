server {
    listen       80;
    server_name  grass-graph.shitemil.works;

    root /var/www/a-know-home/current/public/gglp;

    access_log /var/log/nginx/grass-graph.shitemil.works.access.log ltsv;
    error_log  /var/log/nginx/grass-graph.shitemil.works.error.log;

    add_header Strict-Transport-Security "max-age=2592000; includeSubdomains";

    location ~ /(webdav|muieblackcat|manager|cgi-bin|jbossass|shopdb|dbadmin|2phpmyadmin|mysql|PMA|myadmin|pma|myadmin|phpmyAdmin|database|program|phppma|phpmy|MyAdmin|administrator) {
      deny all;
    }

    location ~ .*\.php {
      deny all;
    }

    location ~ /images/.+\.png {
      return 301 https://grass-graph.moshimo.works/images/relocated.png;
    }

    location / {
      return 301 https://grass-graph.moshimo.works$request_uri;
    }
}
